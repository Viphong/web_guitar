@model List<Models.Framework.GiaiDieu> 

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
               GIAI ĐIỆU
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table  class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>Mã Giai Điệu</th>
                            <th>Tên Giai Điệu</th>
                            <th>Mô tả</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var i in Model)
                        {
                            <tr class="odd gradeX">
                                <td>@i.MaGiaiDieu</td>
                                <td>@i.TenGiaiDieu</td>
                                <td>@i.MoTa</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>